    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.2"
