  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.4",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/hardhat-upgrades": "^1.20.0",
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "prettier": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.2"
  }
}
